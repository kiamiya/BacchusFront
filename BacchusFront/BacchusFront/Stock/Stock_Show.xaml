<Window x:Class="BacchusFront.Stock.Stock_Show"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BacchusFront.Stock"
        mc:Ignorable="d"
        Title="Stock_Show" Height="450" Width="800">
    <Grid>
        <Label Content="Stock de la sélection"  HorizontalAlignment="Center" Height="24" Margin="0,10,0,0" VerticalAlignment="Top" Width="120"/>
        <ListBox HorizontalAlignment="Left" Height="340" Margin="50,70,0,0" VerticalAlignment="Top" Width="650" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="ListBox_SelectionChanged"/>
        <Button Content="+" HorizontalAlignment="Left" Height="60" Margin="720,70,0,0" VerticalAlignment="Top" Width="60" Click="Button_Click_Add"/>
        <Button Content="-" HorizontalAlignment="Left" Height="60" Margin="720,150,0,0" VerticalAlignment="Top" Width="60" Click="Button_Click_Remove"/>
        <Button Content="modifier" HorizontalAlignment="Left" Height="60" Margin="720,230,0,0" VerticalAlignment="Top" Width="60" Click="Button_Click_Modify"/>
        <Button Content="RETOUR" HorizontalAlignment="Left" Height="60" Margin="720,350,0,0" VerticalAlignment="Top" Width="60" Click="Button_Click_Back"/>

    </Grid>
</Window>
