<Window x:Class="BacchusFront.Stock.Stock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BacchusFront.Stock"
        mc:Ignorable="d"
        Title="Stock" Height="450" Width="800">
    <Grid>
        <Button Content="Vin Rouge" HorizontalAlignment="Left" Height="56" Margin="80,50,0,0" VerticalAlignment="Center" Width="100" Click="Button_Click_Rouge"/>
        <Button Content="Vin Blanc" HorizontalAlignment="Left" Height="56" Margin="260,50,0,0" VerticalAlignment="Center" Width="100" Click="Button_Click_Blanc"/>
        <Button Content="Vin Rosé" HorizontalAlignment="Left" Height="56" Margin="440,50,0,0" VerticalAlignment="Center" Width="100" Click="Button_Click_Rose"/>
        <Button Content="Autre" HorizontalAlignment="Left" Height="56" Margin="620,50,0,0" VerticalAlignment="Center" Width="100" Click="Button_Click_Autre"/>

    </Grid>
</Window>
