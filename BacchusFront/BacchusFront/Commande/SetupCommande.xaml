<Window x:Class="BacchusFront.Commande.SetupCommande"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BacchusFront.Commande"
        mc:Ignorable="d"
        Title="SetupCommande" Height="450" Width="800">
    <Grid>
        <Label Content="Preview" HorizontalAlignment="Left" Height="28" Margin="50,10,0,0" VerticalAlignment="Top" Width="52"/>
        <Button Content="Annuler" HorizontalAlignment="Left" Height="49" Margin="525,49,0,0" VerticalAlignment="Top" Width="130" Click="Button_Click_Cancel"/>
        <Button Content="Sauvegarder" HorizontalAlignment="Left" Height="49" Margin="525,183,0,0" VerticalAlignment="Top" Width="130" Click="Button_Click_Save"/>
        <Button Content="Sauvegarder et envoyer" HorizontalAlignment="Left" Height="49" Margin="525,237,0,0" VerticalAlignment="Top" Width="130" Click="Button_Click_SaveAndSend"/>
        <TextBlock HorizontalAlignment="Left" Height="237" Margin="50,49,0,0" TextWrapping="Wrap" Text="Bonjour, vous trouverez ci joint une commande de vin.. " VerticalAlignment="Top" Width="470"/>

    </Grid>
</Window>
