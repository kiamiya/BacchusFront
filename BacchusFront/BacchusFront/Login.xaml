<Window x:Class="BacchusFront.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BacchusFront"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Height="39" Margin="0,69,0,0" TextWrapping="Wrap" Text="Enter your ID" VerticalAlignment="Top" Width="264"/>
        <PasswordBox HorizontalAlignment="Center" Height="41" Margin="0,108,0,0" VerticalAlignment="Top" Width="264" Password="enter your PW"/>
        <Button Content="Login" HorizontalAlignment="Center" Height="79" Margin="0,201,0,0" VerticalAlignment="Top" Width="265" Click="Button_Click_Login"/>
        <Button Content="Register" HorizontalAlignment="Center" Height="79" Margin="0,285,0,0" VerticalAlignment="Top" Width="264" Click="Button_Click_Register"/>

    </Grid>
</Window>
